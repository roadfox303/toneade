<%= form_with(model: @blog, local: true ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <ul id="blog_inputs">
    <li><%= form.text_field :title, placeholder:"title", id: "blog_title" %></li>
    <li><a href="#modal" class="modal">upload</a></li>
  </ul>
  <ul id="phrase_inputs">
    <li><%= form.select :bpm, [["120", 1],["121", 2]], id: "phrase_beat" %></li>
    <li><%= form.select :beat, [["4/4", 1],["3/4", 2]], id: "phrase_beat" %></li>
    <li><%= form.select :key, [["C", 1],["C#", 2]], id: "phrase_key" %></li>
    <li><%= form.select :scale, [["major", 1],["natural miner", 2]], id: "phrase_scale" %></li>
  </ul>
  <div class="swiper-container">
    <h5 class="fix_test">ああああ</h5>
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="track measure">
          <ul class="tr_guide">
            <li>measure</li>
          </ul>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="track measure">
          <ul class="tr_guide">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="track measure">
          <ul class="tr_guide">
            <li>5</li>
            <li>6</li>
            <li>7</li>
            <li>8</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="track_header">
      <h3>MASTER</h3>
      <a class="btn_all btn_active">ALL</a>
    </div>
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="track master_track">
          <ul>
            <li><%= link_to "Load Phrase" %></li>
          </ul>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="track master_track">
          <ul class="tr_guide">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="track master_track">
          <ul class="tr_guide">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="track_header">
      <h3>TR1</h3>
      <a class="btn_all">ALL</a>
    </div>
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="track master_track">
          <ul class="tr_guide">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
      </div>
      <div class="swiper-slide">Slide 2</div>
      <div class="swiper-slide">Slide 3</div>
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>

    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
  <div id="modal" style="display:none;">
    <%= form.text_area :content, placeholder:"comment", id: "blog_content" %>
    <ul class="btn_set">
      <li>
        <div class="modal_close">入力に戻る</div>
      </li>
      <li>
        <%= form.submit "フレーズ送信", class:"submit" %>
      </li>
    </ul>
  </div>

<% end %>
