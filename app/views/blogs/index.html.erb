<%= flash[:notice] %>
<%= link_to "ブログ作成", new_blog_path, data: { "turbolinks"=> false } %>

<% unless @blogs.empty?%>
  <div id="others_all">
  <h2>新着フレーズ一覧</h2>
    <ul>
    <% @blogs.each do |blog| %>
      <li>
        <span><%= link_to blog.title, blog_path(blog.id), data: { "turbolinks"=> false } %></span>
        <%= link_to "ブログ編集", edit_blog_path(blog.id), data: { "turbolinks"=> false } %>
        <%= link_to "ブログ削除", blog_path(blog.id), method: :delete %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>
